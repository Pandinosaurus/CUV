#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

#tmpdir:= $(shell pwd)/debian/tmp

export CC=/usr/bin/gcc-4.6
export CXX=/usr/bin/g++-4.6
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed                                                                                            
DPKG_EXPORT_BUILDFLAGS = 1  
-include /usr/share/dpkg/buildflags.mk

.PHONY:  override_dh_strip override_dh_shlibdeps override_dh_installdocs override_dh_build-indep override_dh_install-indep override_dh_auto_configure

%:
	dh $@ --parallel

# turn off dh_shlibdeps errors: we cannot find a package that contains
# libcudart and libcublas, since there aren't any ubuntu packages for those
# (yet).
override_dh_shlibdeps:
	LD_LIBRARY_PATH=$(LD_LIBRARY_PATH):/usr/local/cuda/lib:/usr/local/cuda-5.5/lib64 dh_shlibdeps

# http://maemo.org/development/documentation/manuals/4-0-x/how_to_make_a_debian_debug_package/
# http://lists.debian.org/debian-devel/2013/06/msg00279.html
override_dh_auto_configure:
	#dh_auto_configure -- -DCMAKE_BUILD_TYPE:STRING=RelWithDebInfo -DCMAKE_VERBOSE_MAKEFILE=OFF -DCUDA_ARCH="-g"
	dh_auto_configure -- -DCMAKE_BUILD_TYPE:STRING=Release -DCMAKE_VERBOSE_MAKEFILE=OFF -DCMAKE_CXX_FLAGS="-g"

override_dh_strip:
	dh_strip --dbg-package=libcuv-dbg

override_dh_auto_build-indep:
	$(MAKE) -C obj-* doc          

override_dh_auto_test:                                                                                                                                                        
	# dh_auto_test                                                                                                                                                            
	echo "Skipping tests as they fail in build environment due to CUDA hardware not being available" 

override_dh_auto_install:
	dh_auto_install
	dh_installdocs
	dh_numpy --strict
